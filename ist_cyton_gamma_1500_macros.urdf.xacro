<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro" name="cyton_gamma_1500">

  <!-- math definitions -->
  <xacro:property name="M_PI" value="3.141592653589793" />

  <!-- Import Rviz colors -->
  <xacro:include filename="$(find mbot_description)/urdf/materials.urdf.xacro" />

    
  <xacro:macro name="base_footprint" params="prefix">
    <link name="${prefix}base_footprint">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.001" />
        </geometry>
       
        <material name="white">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>
    </link>

    <joint name="base_joint" type="fixed">
      <parent link="${prefix}base_footprint" />
      <child link="${prefix}base_link" />
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </joint>
  </xacro:macro>

  <xacro:macro name="cyton_gamma_1500" params="prefix virtual_ee">
    <link name="${prefix}base_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/base.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0.0115 0.047"/>
        <geometry>
          <box size="0.154 0.177 0.094"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        
        <inertia ixx="1.1027" iyy="1.1027" izz="1.1027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}joint0" type="revolute">
      <parent link="${prefix}base_link" />
      <child link="${prefix}shoulder_roll" />
      <origin xyz="0 0 0.05315" rpy="0 0 0" />
      <limit lower="-2.5509" upper="2.5585" effort="100.0" velocity="1.0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}shoulder_roll">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0.384"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/shoulder_roll.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0.0587" rpy="1.5708 0 0"/>
        <geometry>
          <box size="0.09829 0.18143 0.08392"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".1027" iyy=".1027" izz=".1027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}joint1" type="revolute">
      <parent link="${prefix}shoulder_roll" />
      <child link="${prefix}shoulder_pitch" />
      <origin xyz="0.0205 0 0.12435" rpy="0 0 0" />
      <limit lower="-1.707" upper="1.6379" effort="100.0" velocity="1.0" />
      <axis xyz="1 0 0" />
    </joint>

    <link name="${prefix}shoulder_pitch">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/shoulder_pitch.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="-0.02 -0.001 0.064" rpy="1.5708 0 0"/>
        <geometry>
          <box size="0.0709 0.19363 0.083"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0827" iyy=".0827" izz=".0827"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}joint2" type="revolute">
      <parent link="${prefix}shoulder_pitch" />
      <child link="${prefix}shoulder_yaw" />
      <origin xyz="-0.0215 -0.0205 0.1255" rpy="0 0 0" />
      <limit lower="-1.5459" upper="1.73" effort="100.0" velocity="1.0" />
      <axis xyz="0 -1 0" />
    </joint>

    <link name="${prefix}shoulder_yaw">
      <visual>
        <origin xyz="0 0 0.0" rpy="0 0 -1.5708" />
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/shoulder_yaw.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="-0.003 0.0225 0.057" rpy="1.5708 0 -1.5708"/>
        <geometry>
          <box size="0.0717 0.1846 0.0756"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0627" iyy=".0627" izz=".0627"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}joint3" type="revolute">
      <parent link="${prefix}shoulder_yaw" />
      <child link="${prefix}elbow_pitch" />
      <origin xyz="0.018 0.0206 0.1158" rpy="0 0 0" />
      <limit lower="-1.6072" upper="1.6149" effort="100.0" velocity="1.0" />
      <axis xyz="1 0 0" />
    </joint>

    <link name="${prefix}elbow_pitch">
      <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 3.1416" />
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/elbow_pitch.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="-0.017 0.004 0.0461" rpy="1.5708 0 3.1416"/>
        <geometry>
          <box size="0.0549 0.1557 0.076"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0327" iyy=".0327" izz=".0327"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}joint4" type="revolute">
      <parent link="${prefix}elbow_pitch" />
      <child link="${prefix}elbow_yaw" />
      <origin xyz="0.012 -0.018 0.09746" rpy="0 0 0" />
      <limit lower="-1.8757" upper="1.4615" effort="100.0" velocity="1.0" />
      <axis xyz="0 -1 0" />
    </joint>

    <link name="${prefix}elbow_yaw">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 1.5708" />
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/elbow_yaw.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0.0172 0.047" rpy="1.5708 0 1.5708" />
        <geometry>
          <box size="0.0535 0.1160 0.053"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0227" iyy=".0227" izz=".0227"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}joint5" type="revolute">
      <parent link="${prefix}elbow_yaw" />
      <child link="${prefix}wrist_pitch" />
      <origin xyz="-0.02626 -0.02 0.0718" rpy="0 0 ${M_PI}" />
      <limit lower="-1.5766" upper="1.5382" effort="100.0" velocity="1.0" />
      <axis xyz="-1 0 0" />
    </joint>









    <link name="${prefix}wrist_pitch">
      <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 1.5708" />
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/wrist_pitch.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="-0.02 0 0.05" rpy="1.5708 0 1.5708" />
        <geometry>
          <box size="0.085 0.0435 0.05185"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0127" iyy=".0127" izz=".0127"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}joint6" type="revolute">
      <parent link="${prefix}wrist_pitch" />
      <child link="${prefix}Wrist" />
      <origin rpy="0 3.14 0" xyz="-0.026255 0.02 0.115"/>
      <limit lower="-2.5279" upper="2.5355" effort="100.0" velocity="1.0" />
      <axis xyz="0 0 1" />
    </joint>



    <link name="${prefix}Wrist">
      <visual>
        <origin rpy="0.0 0 -1.57" xyz=" -0.013 0.015 0.0359"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/wrist.dae"/>
        </geometry>

      </visual>
      <collision>
        <origin rpy="0.0 0 -1.57" xyz=" -0.013 0.015 0.0359"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>



    <link name="${prefix}Motor_+_Base">
      <visual>
        <origin rpy="0.0 0 0" xyz=" 0 -0.045 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/Motor_+_Base.dae"/>
        </geometry>

      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz=" 0 -0.045 0"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}wrist_to_motor_+_base" type="fixed">
      <parent link="${prefix}Wrist" />
      <child link="${prefix}Motor_+_Base" />
      <origin xyz="0 0.022 0"/>
    </joint>





<link name="${prefix}right_link_front">
      <visual>
        <origin rpy="0 -0.6 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/right_link_front.dae"/>
        </geometry>

      </visual>
      <collision>
        <origin rpy="0 -0.6 0" xyz="0 0 0"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}gripper_joint" type="revolute">
      <parent link="${prefix}Motor_+_Base" />
      <child link="${prefix}right_link_front" />
      <origin xyz="0 0 0 "/>

      <limit effort="1000.0" lower="0.0" upper="1.68" velocity="0.5"/>
      <axis xyz="0 1 0" />
    </joint>



     <link name="${prefix}right_link_back">
      <visual>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/right_link_back.dae"/>
        </geometry>

      </visual>
      <collision>
        <origin rpy="0.0 0 0" xyz="0 0 0"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}motor_base_to_right_link_back" type="revolute">
      <parent link="${prefix}Motor_+_Base" />
      <child link="${prefix}right_link_back" />
      <origin xyz="0.025 -0.0085 0.015 "/>

      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0.0" upper="1.68" velocity="0.5"/>
      <mimic joint="${prefix}gripper_joint" multiplier="1" offset="0"/> 
    </joint>




     <link name="${prefix}left_link_front">
      <visual>
        <origin rpy="0 3.142 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/left_front_link.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 3.142 0" xyz="0 0 0"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}motor_base_to_left_link_front" type="revolute">
      <parent link="${prefix}Motor_+_Base" />
      <child link="${prefix}left_link_front" />
      <origin xyz="-0.022 -0.001 0"/>

      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0.0" upper="1.68" velocity="0.5"/>
      <mimic joint="${prefix}gripper_joint" multiplier="-1" offset="0"/> 
    </joint>





     <link name="${prefix}left_link_back">
      <visual>
        <origin rpy="0 3.14 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/left_link_back.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 3.14 0" xyz="0 0 0"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}motor_base_to_left_link_back" type="revolute">
      <parent link="${prefix}Motor_+_Base" />
      <child link="${prefix}left_link_back" />
      <origin xyz="-0.0469 -0.014 0.0155"/>

      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0.0" upper="1.68" velocity="0.5"/>
      <mimic joint="${prefix}gripper_joint" multiplier="-1" offset="0"/> 
    </joint>



     <link name="${prefix}one_finger">
      <visual>
        <origin rpy="0 0.003 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/one_finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0.003 0" xyz="0 0 0"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}left_link_back_to_one_finger" type="revolute">
      <parent link="${prefix}left_link_back" />
      <child link="${prefix}one_finger" />
      <origin xyz="-0.06 0.008 0.0"/>

      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0.0" upper="1.68" velocity="0.5"/>
      <mimic joint="${prefix}motor_base_to_left_link_front" multiplier="-1" offset="0"/>  
    </joint>



     <link name="${prefix}two_fingers">
      <visual>
        <origin rpy="0 0.24 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://cyton_gamma_1500_description/meshes/two_fingers.dae"/>
        </geometry>
        <material name="black"/>
 
      </visual>
      <collision>
        <origin rpy="0 0.24 0" xyz="0 0 0"/>
        <geometry>
          <box size="0.1 0.05 0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.001"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx=".0027" iyy=".0027" izz=".0027"
                  ixy="0" ixz="0" iyz="0"/>
      </inertial>
    </link>

    <joint name="${prefix}right_link_back_to_two_fingers" type="revolute">
      <parent link="${prefix}right_link_back" />
      <child link="${prefix}two_fingers" />
      <origin xyz="0.06 -0.02 0.0"/>

      <axis xyz="0 1 0"/>
      <limit effort="1000.0" lower="0.0" upper="1.68" velocity="0.5"/>
      <mimic joint="${prefix}gripper_joint" multiplier="-1" offset="0"/> 
    </joint>




    <xacro:if value="${virtual_ee}"> <!-- virtual end-effector -->
      <joint name="${prefix}virtual_endeffector_joint" type="fixed">
        <parent link="${prefix}Wrist" />
        <child link="${prefix}virtual_endeffector" />
        <origin xyz="-0.002316 0.0079 0.079425" rpy="0 0 0" />
      </joint>

      <link name="${prefix}virtual_endeffector">
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <sphere radius="0.002" />
          </geometry>
          <material name="grey">
            <color rgba="0.7 0.7 0.7 0.8" />
          </material>
        </visual>
      </link>
    </xacro:if>
  </xacro:macro>

  <gazebo>
    <plugin name="joint_state_publisher"
            filename="libgazebo_ros_joint_state_publisher.so">
      <jointName>left_arm_joint0, left_arm_joint1, left_arm_joint2, left_arm_joint3, left_arm_joint4, left_arm_joint5, left_arm_joint6</jointName>
      <robotNamespace>/</robotNamespace>
      <updateRate>50.0</updateRate>
    </plugin>
  </gazebo>

  <!-- arm transmissions -->

  <!-- arm transmission macro -->
  <xacro:macro name="arm_transmission_macro" params="joint_name">
    <transmission name="${joint_name}_arm_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${joint_name}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${joint_name}_actuator">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>
  </xacro:macro>

  <!-- joint0 -->
  <xacro:arm_transmission_macro joint_name="left_arm_joint0" />

  <!-- joint1 -->
  <xacro:arm_transmission_macro joint_name="left_arm_joint1" />

  <!-- joint2 -->
  <xacro:arm_transmission_macro joint_name="left_arm_joint2" />

  <!-- joint3 -->
  <xacro:arm_transmission_macro joint_name="left_arm_joint3" />

  <!-- joint4 -->
  <xacro:arm_transmission_macro joint_name="left_arm_joint4" />

  <!-- joint5 -->
  <xacro:arm_transmission_macro joint_name="left_arm_joint5" />

  <!-- joint6 -->
  <xacro:arm_transmission_macro joint_name="left_arm_joint6" />

</robot>
